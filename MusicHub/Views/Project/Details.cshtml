@model MusicHub.Models.Project
@using MusicHub.Helpers
@{
    if (WebSecurity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_Logged_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<div class="row">
    <div class="col s4">
        <div class="row card">
            <div class="container">
                <h3>Project menu</h3>
                <div class="section">
                    @Html.ActionLink("Details", "Details", new { projectname = Model.ProjectName })
                </div>
                <div class="divider"></div>
                <div class="section">
                    @Html.ActionLink("Comments", "Comments", new { projectname = Model.ProjectName })
                </div>
                <div class="divider"></div>
                <div class="section">
                    @Html.ActionLink("Contents", "Contents", new { projectname = Model.ProjectName })
                </div>
            </div>
        </div>
    </div>
    <div class="col s8">
        <div class="row">
            <div class="col s8">
                @Html.ActionLink(Model.User.UserName, "Profile", "User", new { user = Model.User.UserName }, null) / @Model.ProjectName
            </div>
            <div class="col s4">
                @if (WebSecurity.CurrentUserName != Model.User.UserName)
                {

                }
            </div>
        </div>
    </div>
    <div class="col s8">
        <h2>Details</h2>
        <div class="row">
            <div class="col s6">
                <span>Project name:</span>
                <i>@Model.ProjectName</i>
            </div>
            <div class="col s6">
                <span>Musical style:</span>
                <i>@Model.MusicalStyle.MusicalStyleName</i>
            </div>
            <div class="col s6">
                <span>Created on:</span>
                <i>@Model.CreationDate.ToShortDateString()</i>
            </div>
            <div class="col s6">
                <span>Authored by:</span>
                <i>@Model.User.UserName</i>
            </div>
            <div class="col s12">
                <span>Description:</span>
                <i>@Model.ProjectDescription</i>
            </div>
        </div>
    </div>
</div>
