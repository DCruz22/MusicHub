@model MusicHub.Models.Project

@{
    Layout = "~/Views/Shared/_Logged_Layout.cshtml";
}

<div class="">
    <h2>Create a project.</h2>
        @using (Html.BeginForm("Create", "Project", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            
            <div class="container">
                <div class="row">
                    <div class="col s6 input-field">
                        @Html.LabelFor(x => x.ProjectName)
                        @Html.TextBoxFor(x => x.ProjectName)
                    </div>
                    <div class="col s6 input-field">
                        @Html.DropDownListFor(x => x.MusicalStyleId, null, "Choose a musical style", new { @type = "select" })
                    </div>
                    <div class="col s6">
                        @Html.ValidationMessageFor(x => x.ProjectName)
                    </div>
                    <div class="col s6">
                        @Html.ValidationMessageFor(x => x.MusicalStyleId)
                    </div>
                    <div class="col s12 input-field">
                        @Html.LabelFor(x => x.ProjectDescription)
                        @Html.TextAreaFor(x => x.ProjectDescription, new { @class = "materialize-textarea" })
                    </div>
                    <div class="col s12 center">
                        <input type="submit" value="create project" class="btn blue darken-2" />
                    </div>
                    <br />
                </div>
            </div>
        }
</div>
