@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MusicHub</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/style/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/style/materialize.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="light-blue darken-4">
        <div class="nav-wrapper container">
            @Html.ActionLink("MusicHub", "Index", "Home", new { area = "" }, new { @class = "brand-logo" })
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>
                    @using (Html.BeginForm("Results", "Home", FormMethod.Get))
                    {
                        <input type="text" name="search" class="white black-text" placeholder="search..."/>
                    }
                </li>
                <li>@Html.ActionLink("Suggestions", "Suggestions", new { user = WebSecurity.CurrentUserName})</li>
                <li>@Html.ActionLink("My Profile", "Profile", new { user = WebSecurity.CurrentUserName})</li>
                <li>@Html.ActionLink("Log out","Logoff", "Account")</li>
            </ul>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <div class="footer-copyright">
            <div class="container">
                <p>Developed by: <i>Dariel Cruz</i></p>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/materialize.min.js"></script>    
    @Scripts.Render("~/bundles/jqueryval");    
    @Scripts.Render("~/bundles/jqueryAjax");
    <script src="@Url.Content("~/Scripts/app.js")"></script>
    @RenderSection("Scripts", false)
</body>
</html>