<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MusicHub</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <link href="~/Content/style/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/style/materialize.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="light-blue darken-4">
        <div class="nav-wrapper container">
            @Html.ActionLink("MusicHub", "Index", "Home", new { area = "" }, new { @class = "brand-logo" })
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>
                    @using (Html.BeginForm("Results", "Home", FormMethod.Get))
                    {
                        <input type="text" name="search" class="white black-text" placeholder="Search for a Project..."/>
                    }
                </li>
                <li class="tab">@Html.ActionLink("Log In", "Login", "Account")</li>
                <li>|</li>
                <li class="tab">@Html.ActionLink("Register", "Register", "Account")</li>
            </ul>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <div class="footer-copyright">
            <div class="container">
                <p>Developed by: <i>Dariel Cruz</i></p>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.11.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/modernizr-2.6.2.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/materialize")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/app.js")" type="text/javascript"></script>
</body>
</html>