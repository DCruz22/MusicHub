@model MusicHub.Models.User

@{
    Layout = "~/Views/Shared/_Logged_Layout.cshtml";
}
<br />
<div class="row">
        <div class="col s4 card">
            <div class="container">
                <div class="col s12">
                    @if (ViewBag.IsOwner)
                    {
                        <a href="@Url.Action("ChangeProfilePicture", new { user = WebSecurity.CurrentUserName})"><img alt="Change" src="@Url.Content(@Model.PhotoUrl)" id="PhotoUrl" class="circle responsive-img" /></a>
                    }
                    else
                    {
                        <img src="@Url.Content(@Model.PhotoUrl)" id="PhotoUrl" class="circle responsive-img" />
                    }
                </div>
                <div class="divider"></div>
                <div class="col s12">
                    <h4>@Model.Name @Model.LastName</h4>
                    <h5><i>@Model.UserName</i></h5>
                </div>
                <div class="divider"></div>
                <div class="col s12">
                    <p>@Model.Country.CountryName</p>
                    <p>Joined on @Model.JoinDate.ToShortDateString()</p>
                </div>
                <div class="divider"></div>
                <div class="col s12">
                </div>
            </div>
    </div>
    <div class="col s8 right">
        @if (ViewBag.IsOwner)
        {
            @Html.ActionLink("Edit profile", "Settings", "User", new { user = WebSecurity.CurrentUserName }, new { @class = "btn "})
        }
        @if (WebSecurity.IsAuthenticated && Model.UserName != WebSecurity.CurrentUserName)
        {
            @Html.ActionLink("Follow", "Follow", "User", null, new { @class = "btn indigo lighten-2" })
        }
    </div>
</div>